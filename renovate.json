{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
   "config:recommended", ":dependencyDashboard"
  ],
  "postUpdateOptions": ["helmUpdateSubChartArchives"],
  "packageRules": [
    {
      "matchDatasources": ["gomod", "go", "helm", "golang-version", "helmv3"],
      "prCreation": "immediate"
    }
  ],
  "postUpgradeTasks": {
    "commands": [ "install-tool helm v3.8.1", "helm dependency update" ],
    "fileFilters": [
      "Chart.yaml",
      "charts/*.tgz"
    ]
  }
 }
